#include<bits/stdc++.h>
using namespace std;

int main(){
    int n,m;
    cin>>n>>m;
    int l[n+1],r[n+1];
    int first_row = n+1;
    int ans,ans_l,ans_r;
    for(int i=1;i<=n;i++){
        r[i] = -1;
        l[i] = n+1;
    }
    for(int i=1;i<=m;i++){
        int x,y;
        cin>>x>>y;
        first_row = min(first_row,x);
        r[x] = max(r[x],y);
        l[x] = min(l[x],y);
    }
    ans = r[first_row] - l[first_row] + 1;
    ans_l = l[first_row];
    ans_r = r[first_row];
    for(int i=first_row+1;i<=n;i++){
        if(r[i] == -1){//nothing in this row
            ans_l = max(1,ans_l-1);
            ans_r = min(n,ans_r+1);
        }else if(r[i] > ans_r){
            if(l[i] >= ans_r - ans + 1){
                if(l[i] == ans_r - ans + 1){
                    ans += (r[i] - ans_r);
                    ans_r = r[i];
                    ans_l = ans_r - ans + 1;
                }else{
                    ans += (r[i] - ans_r - 1);
                    ans_r = r[i];
                    ans_l = ans_r - ans + 1;
                }
            }else{
                ans_r = r[i];
                ans_l = l[i];
                ans = ans_r - ans_l + 1;
            }
        }else if(r[i] > ans_l + ans - 1){
            if(l[i] > ans_r - ans + 1){
                ans_r ++;
                ans_r = min(n,ans_r);
                ans_l = r[i] - ans + 1;
            }else if(l[i] == ans_r - ans + 1){
                ans_l = r[i] - ans + 1;
            }else{
                if(r[i] - l[i] + 1 > ans){
                    ans_r = r[i];
                    ans_l = l[i];
                    ans = r[i] - l[i] + 1;
                }else{
                    ans_r = l[i] + ans - 1;
                    ans_l = max(r[i] - ans + 1, ans_l - 1);
                }
            }
        }else if(r[i] >= ans_l){
            if(l[i] >= ans_l){
                ans_r = min(ans_r + 1, l[i] + ans - 1);
                ans_l = max(ans_l - 1,r[i] - ans + 1);
            }else{
                if(ans_l + ans - 1 == r[i]){
                    ans += (ans_l - l[i]);
                    ans_l = l[i];
                    ans_r = ans_l + ans - 1;
                }else{
                    ans += (ans_l - l[i] - 1);
                    ans_l = l[i];
                    ans_r = ans_l + ans - 1;
                }
            }
        }else{
            ans += (ans_l - l[i] - 1);
            ans_l = l[i];
            ans_r = ans_l + ans - 1;
        }
    }
    cout<<ans<<endl;
    return 0;
}
